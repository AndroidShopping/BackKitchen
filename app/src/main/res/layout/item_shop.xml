<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="268px"
    android:paddingLeft="50px"
    android:paddingRight="50px">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_centerVertical="true"
        android:src="@drawable/not_pic" />

    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="@string/price_unit"
            android:textColor="#E4001E"
            android:textSize="36px" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="184px"
            android:layout_height="70px"
            android:background="@drawable/shop_button_selector"
            android:gravity="center"
            android:text="@string/shop_shelf"
            android:textColor="@android:color/white"
            android:textSize="36px" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ll_right"
        android:layout_toRightOf="@id/iv_icon"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="36px"
        android:text="@string/price_unit"
        android:textColor="@android:color/black"
        android:textSize="36px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:background="@drawable/custom_divider" />
</RelativeLayout>