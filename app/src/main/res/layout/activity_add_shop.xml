<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tool_bar_layout" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:gravity="center_horizontal"
        android:background="#fffff9eb"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_marginTop="23dp"
            android:layout_width="136dp"
            android:src="@drawable/shop_add_icon"
            android:layout_height="136dp"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="207dp"
            android:layout_height="33dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/shop_name_shape"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:hint="@string/shop_name"
            android:textColor="#ff000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_price"
            android:layout_width="207dp"
            android:layout_height="33dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shop_name_shape"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:hint="@string/shop_price"
            android:textColor="#ff000000"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_add_shop"
        android:layout_width="327dp"
        android:layout_height="49dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="38dp"
        android:background="@drawable/add_shop_button_bg"
        android:gravity="center"
        android:text="@string/commit"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:textStyle="bold" />


</LinearLayout>