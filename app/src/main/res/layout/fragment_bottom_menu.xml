<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:paddingRight="30px"
    android:paddingLeft="30px"
    android:orientation="vertical"
    android:background="#00000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bottom_menu_layout_margin"
        android:background="@color/bottom_menu_layout_color" >
        <ListView
            android:id="@+id/lv_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bottom_menu_layout_margin"
        android:background="@color/bottom_menu_layout_color" >
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_menu_btn_height"
            android:layout_margin="@dimen/bottom_menu_btn_margin"
            android:gravity="center"
            android:text="@string/cancle"
            android:textColor="@color/bottom_menu_btn_text_commom_color"
            android:textSize="@dimen/bottom_menu_btn_text_size"
            android:background="@drawable/bottom_menu_btn_selector">

        </TextView>
    </LinearLayout>
</LinearLayout>
</ScrollView>